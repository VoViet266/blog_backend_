
<div class="text">
    <div class="mt-4">
        <div class="row">
            {{#each courses}}
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/courses/{{this.slug}}">
                        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.Description}}</p>
                        <div class="btn">
                            <a href="/courses/{{this.slug}}" class="btn btn-primary">Go somewhere</a>
                        </div>                       
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<style>
    .text{
        position: relative;
        color: #000;
        height: 100vh;
        display: flex;
    }
    .card{
        margin: 10px;
        height: 400px;
    }
    .btn-primary{
        
    }
    .card-body .btn{
        width: 100%;
        height: 50px;
        position: static;
        z-index: 99;
    }



</style>